@model BusinessControlApp.Models.UserViewModel;

@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create a User</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Names" class="control-label"></label>
                <input asp-for="Names" class="form-control" placeholder="Enter user's names" required />
                <span asp-validation-for="Names" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Lastnames" class="control-label"></label>
                <input asp-for="Lastnames" class="form-control" placeholder="Enter user's lastnames" required />
                <span asp-validation-for="Lastnames" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter user's email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="UserTypeId" class="control-label">User Type</label>
                <select asp-for="UserTypeId" class="form-control" asp-items="ViewBag.userTypes" required></select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter user's password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary me-4" />
                <a asp-controller="Home" asp-action="Users">Back to List</a>
            </div>
        </form>
    </div>
</div>


